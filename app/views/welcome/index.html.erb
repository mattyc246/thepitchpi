
<% if current_user && @user.subscription_status == true %>



<% elsif current_user && @user.subscription_status == false %>


	<div class="text-center w-50 h-50 my-auto shadow-lg child bg-form-custom border rounded p-3">
	  <div class="child">
		<h1 class="text-center text-light">Welcome back <%= @user.name %></h1>
		<h3 class="text-light">
			Your subscription is not yet validated! Please make immediate payment in order to access your account!
		</h3>
		<%= link_to "Make Payment", subscription_new_path, class:"btn btn-outline-danger" %>
	  </div>
	</div>


<% else %>

<div class="vertical-center">
	<div class="w-75 mx-auto text-center">
	  <%= image_tag "logo_large_W.png", style:"width: 60%;" %>
	  <h1 class="cover-heading f-1">SECURITY <%= image_tag "logo_crossbones_W.png", style:"width: 3rem;" %> SYSTEMS</h1>
	  <a href="/sign_in" class="btn btn-secondary text-body m-2 w-25 f-1">LOCK IN</a></br>
	  <a href="/sign_up" class="text-white f-1">or Sign Up</a>
	  <div class="w-50 mx-auto f-1">
	    <p class="lead">Did you lock your door in your house? If not, you have come to the right page! We can help you to lock your door remotely. </p>
	  </div>
	</div>
</div>
	



<% end %>

